<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FicappX"
        tools:targetApi="31">
        <activity
            android:name=".AuthorAccountAcitvity"
            android:exported="false"
            android:label="@string/title_activity_author_account_acitvity"
            android:theme="@style/Theme.FicappX" />
        <activity
            android:name=".FanficInfoActivity"
            android:exported="false"
            android:label="@string/title_activity_fanfic_info"
            android:theme="@style/Theme.FicappX" />
        <activity
            android:name=".ReadActivity"
            android:exported="false"
            android:label="@string/title_activity_read"
            android:theme="@style/Theme.FicappX" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FicappX"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>